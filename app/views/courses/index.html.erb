<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn Something Today</h1>
    <% @courses.each do |course| %>
  <hr class="col-8 offset-2" />
  <h2 class="text-center">
    <%= link_to course.title, course_path(course) %>
    <br />
    <br />
    <%= image_tag course.image.url, class: 'img-fluid' %>
    
    <div class="row">
      <div class="col-12 col-sm-8">
        <br />
        <% if course.description.present? %>
        <b class="description"><%= course.description %></b>
      <% end %>
      </div>
      <div class="col-sm-4 col-12 text-center">
        <br />
        <%=link_to 'Tell Me More...', course_path(course), class: 'btn btn-primary btn-large' %>
      </div>
    </div>
    <br class="clr" />
  <% end%>
</div>
