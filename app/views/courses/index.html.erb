<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />

  <% @courses.each do |course| %>
    <h2 class="text-center">
      <% if course.title.present? %>
        <%= course.title %></h2>
      <% end %>
    <br />
    <div class="row">
      <div class="col-sm-8 col-12">
        <% if course.description.present? %>
          <%= course.description %>
        <% end %>
      </div>
      <div class="col-sm-4 col-12 text-center">
        <%=link_to 'Button', '#', class: 'btn btn-primary btn-large' %>
      </div>
    </div>
    <br class="clr" />
  <% end%>
</div>